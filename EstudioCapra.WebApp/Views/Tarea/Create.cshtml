@model EstudioCapra.Models.TareaModel

<div class="portlet-title">
    <div class="caption">
        <i class="fa fa-gift"></i>Nueva Tarea
    </div>
</div>
<div class="portlet-body form">
    <!-- BEGIN FORM-->
    <form method="post" asp-action="Create" asp-controller="Tarea" enctype="multipart/form-data">
        <div class="form-body">
            <div class="form-group">
                <label asp-for="NombreTarea" class="control-label"></label>
                <input asp-for="NombreTarea" class="form-control" placeholder="Nombre Tarea">
            </div>
            <div class="form-group">
                <label asp-for="idTipoTarea" class="control-label"></label>
                <select asp-for="idTipoTarea" asp-items=@ViewBag.SelectTipoTarea class="form-control"></select>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="DescripcionTarea" class="control-label"></label>
                    <textarea asp-for="NombreTarea" class="form-control" placeholder="Descripcion"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicioTarea" class="control-label"></label>
                <input asp-for="FechaInicioTarea" class="form-control" placeholder="DD/MM/YYYY">
            </div>
            <div class="form-group">
                <label asp-for="FechaFinTarea" class="control-label"></label>
                <input asp-for="FechaFinTarea" class="form-control" placeholder="DD/MM/YYYY">
            </div>
            <div class="form-group">
                <label asp-for="ListaEmpleadoId" class="control-label"></label>
                <select asp-for="ListaEmpleadoId" asp-items=@ViewBag.SelectEmpleado multiple class="form-control"></select>
            </div>
            <input hidden id="TareaModelEtapaId" asp-for="EtapaId" />
            <input hidden id="TareaModelContratoId" asp-for="ContratoId" />
        </div>
        <div class="form-actions">
            <button type="submit" class="btn green">Submit</button>
            <button type="button" id="btnCancelNuevaTarea" class="btn default">Cancel</button>
        </div>
    </form>
    <!-- END FORM-->
</div>

<script>
    $(function () {
        $("#TareaModelEtapaId").val($("etapaId").val());
        $("#TareaModelContratoId").val($("contratoId").val());
    });

    $("#btnCancelNuevaTarea").click(function () {
        $("#modalNuevaTarea").modal('toggle');
    })
</script>