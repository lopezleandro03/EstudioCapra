@model EstudioCapra.Model.Cuenta.CuentaModel

@{
    Layout = null;
}

<!-- BEGIN BREADCRUMBS -->
<div class="breadcrumbs">
    <h1>Estado Cuenta</h1>
    <ol class="breadcrumb">
        <li>
            <a href="#">Home</a>
        </li>
        <li class="active">Cuenta</li>
    </ol>
</div>
<!-- END BREADCRUMBS -->
<!-- BEGIN PAGE BASE CONTENT -->

<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="portlet sale-summary">
            <div class="portlet-title">
                <div class="caption font-red sbold"> Resumen </div>
                <div class="tools">
                    <a class="reload" href="javascript:;" data-original-title="" title=""> </a>
                </div>
            </div>
            <div class="portlet-body">
                <ul class="list-unstyled">
                    <li>
                        <span class="sale-info">
                            COSTO SERVICIOS ADQUIRIDOS
                            <i class="fa fa-img-up"></i>
                        </span>

                        <span class="sale-num"> $@Model.Total </span>
                    </li>
                    <li>
                        <span class="sale-info">SALDO A PAGAR </span>
                        <span class="sale-num"> $@Model.Saldo </span>
                    </li>
                    <li>
                        <span class="sale-info"> TOTAL PAGOS PROCESADOS </span>
                        <span class="sale-num"> $@Model.TotalPagosAceptados </span>
                    </li>
                    <li>
                        <span class="sale-info"> TOTAL PAGOS PENDIENTES DE ACREDITACIÓN </span>
                        <span class="sale-num"> $@Model.TotalPagosPendientes </span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-md-offset-2 portlet">
        <div class="portlet-title">
            <div class="caption font-red sbold"> Historia de Pagos </div>
            <div class="tools">
                <a class="reload" href="javascript:;" data-original-title="" title=""> </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="table-scrollable">
                <table class="table table-hover">
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Motivo
                        </th>
                        <th>
                            Monto
                        </th>
                        <th>
                            Fecha de Pago
                        </th>
                        <th>
                            Metodo de Pago
                        </th>

                        <th>
                            Estado
                        </th>
                    </tr>

                    @foreach (var pago in Model.Pagos)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => pago.PagoId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => pago.Motivo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => pago.Monto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => pago.FechaDePago)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => pago.MetodoDePago)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => pago.Estado)
                            </td>
                        </tr>
                    }

                    @if (Model.Pagos.Count == 0)
                    {
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>

                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>

                    }
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="portlet col-md-8 col-md-offset-2">
        <div class="portlet-title">
            <div class="caption font-red sbold"> Nuevo Pago </div>
            <div class="tools">
                <a class="reload" href="javascript:;" data-original-title="" title=""> </a>
            </div>
        </div>

        <div class="portlet-body">
            <div class="pricing-content-2">
                <div class="pricing-table-container">
                    <div class="row padding-fix">
                        <div class="col-md-offset-2 col-md-4 no-padding">
                            <div class="price-column-container featured-price border-top">
                                <div class="price-feature-label uppercase bg-green-jungle">Pago Mínimo</div>

                                <div class="price-table-pricing">
                                    <h3>
                                        <span class="price-sign">$</span>@Model.PagoMinimo
                                    </h3>
                                </div>
                                <div class="price-table-content">
                                    <div class="row no-margin">
                                        <div class="col-xs-3 text-right">
                                            <i class="icon-user-follow"></i>
                                        </div>
                                        <div class="col-xs-9 text-left uppercase">Campaña Politica Pablo Bruera</div>
                                    </div>
                                    <div class="row no-margin">
                                        <div class="col-xs-3 text-right">
                                            <i class="icon-drawer"></i>
                                        </div>
                                        <div class="col-xs-9 text-left uppercase">Pre-Producción</div>
                                    </div>

                                </div>
                                <div class="price-table-footer">
                                    <button type="button" id="btnPagoMinimo" class="btn green featured-price uppercase">PAGAR POR MERCADO PAGO</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 no-padding">
                            <div class="price-column-container featured-price border-top">
                                <div class="price-feature-label uppercase bg-blue">Pago Total</div>

                                <div class="price-table-pricing">
                                    <h3>
                                        <span class="price-sign">$</span>@Model.Saldo
                                    </h3>
                                </div>
                                <div class="price-table-content">
                                    <div class="row no-margin">
                                        <div class="col-xs-3 text-right">
                                            <i class="icon-user-follow"></i>
                                        </div>
                                        <div class="col-xs-9 text-left uppercase">Campaña Politica Pablo Bruera</div>
                                    </div>
                                    <div class="row no-margin">
                                        <div class="col-xs-3 text-right">
                                            <i class="icon-drawer"></i>
                                        </div>
                                        <div class="col-xs-9 text-left uppercase">Todas las etapas</div>
                                    </div>

                                </div>
                                <div class="price-table-footer">
                                    <button type="button" id="btnPagoMinimo" class="btn green featured-price uppercase">PAGAR POR MERCADO PAGO</button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#btnPagoTotal").click(function () {
        window.location.href = "@ViewBag.PagoTotal";
    });

    $("#btnPagoMinimo").click(function () {
        window.location.href = "@ViewBag.PagoMinimo";
    });
</script>